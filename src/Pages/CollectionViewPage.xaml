<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:AllTheLists.Models"
             xmlns:v="clr-namespace:AllTheLists.Views"
             xmlns:vm="clr-namespace:AllTheLists.ViewModels"
             x:DataType="vm:ProductsViewModel"
             x:Class="AllTheLists.Pages.CollectionViewPage"
             Title="CollectionViewPage">
    <CollectionView ItemsSource="{Binding Products}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <v:ProductListItem />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>